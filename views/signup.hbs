<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">Registrate! </div>
        <div class="card-body">
          <form action="/register" method="POST" enctype="multipart/form-data">
            <div class="form-group">
              <label for="nombre">Nombre</label>
              <input type="text" class="form-control" id="nombre" name="nombre" required>
            </div>
            <div class="form-group">
              <label for="mail">Email</label>
              <input type="email" class="form-control" id="mail" name="mail" required>
            </div>
            <div class="form-group">
              <label for="mail">Contraseña</label>
              <input type="password" class="form-control" id="pass" name="password" required>
            </div>
            <div class="form-group">
              <label for="experiencia">Años de Experiencia</label>
              <input  type="number" class="form-control" id="experiencia" name="experiencia">
            </div>
            <div class="form-group">
              <label for="especialidad">Especialidad</label>
              <input type="text" class="form-control" id="especialidad" name="especialidad" required >
            </div>
            <div class="form-group">
            
              <label for="file">Foto de perfil : </label>
              
              <div class="row py-3">
                <div class="col-6"><input type="file" class="form-control-file" id="file" name="file" required ></div>
                </div>
                <div class="row mt-4 justify-content-center">
                    <button id="enviar" type="submit" class="btn btn-primary col-11">Enviar</button>
                </div>
              
              
              
            </div>
            
          </form>

        </div>
      </div>
    </div>
  </div>

  
</div>
